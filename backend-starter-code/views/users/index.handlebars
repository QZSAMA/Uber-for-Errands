<header class="intro-header" style="background-image: url('/img/users.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Users</h1>
          <hr class="small">
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#each allUsers}}
        <div class="post-preview">
          <a href="/users/{{this.userName}}">
            <h2 class="post-title">
              {{this.userName}}
            </h2>
          </a>
          <p class="post-meta">{{this.firstName}} {{this.lastName}}</p>
        </div>
      
      {{/each}}
      
    </div>
  </div>
</div>
