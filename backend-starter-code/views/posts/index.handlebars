<header class="intro-header"  >
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Tasks</h1>
          
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container" id="bgcolor4">

<div class="row">
  <div class="col-xs-6 col-xs-offset-3" >
    <div id="post-box">
    <h4>What can we help for you?</h4>
    <div class="row">
    <form action="/posts" method="post" >
      
      <textarea name="title" class="form-control" placeholder="Job Title" rows="1"></textarea>
      <textarea name="money" class="form-control" placeholder="Reward amount" rows="1"></textarea>
      <textarea name="post" class="form-control" placeholder="More Description" rows="4"></textarea>
      
      
      <textarea name="geolocation" onClick="getGeo();" class="form-control" placeholder="New York, NY">{{pos.lat}}</textarea>
      
      <script>
      function getGeo(){
          if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition((position)=> {
                    var pos = {
                    lat: position.coords.latitude,
                    lng: position.coords.longitude
                  };
                  console.log(pos);}
                  , function() {
                  handleLocationError(true, infoWindow, map.getCenter());
                });
              } else {
                // Browser doesn't support Geolocation
                handleLocationError(false, infoWindow, map.getCenter());
        }
      }
      </script>
      <button type="submit" class="btn btn-primary pull-right">Post</button>
    </form>
  </div>
  </div>

  </div>
</div>
<hr>
{{#each posts}}
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <a href=/posts/{{id}}>
          <h3 class="post-title">{{ title }} 
          <h5 class="post-subtitle">Reward:{{money}}
          </a>

          
          <!--<span>body:{{post}}</span>-->          
        
        </div>
      </div>
    </div>
  </div>
  <hr>
{{/each}}
</div>
